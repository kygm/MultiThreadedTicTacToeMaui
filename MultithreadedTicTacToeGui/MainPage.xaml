<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultithreadedTicTacToeGui.MainPage">

    <ScrollView>
        <Grid Padding="30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Text="Tic Tac Toe - Multi Threaded"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Label
                Grid.Row="1"
                Text="Created by Kevin Gutierrez and Cha Vue for CSCI 310 Intro to Operating Systems"
                FontSize="20"
                HorizontalOptions="Center" />

            <Button
                Margin="100"
                Grid.Row="2"
                x:Name="StartAppButton"
                Text="Start App"
                Clicked="OnStartButtonClicked"
                HorizontalOptions="Center" />

        </Grid>
    </ScrollView>

</ContentPage>
